<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/pressed</item>
        <item name="colorPrimaryDark">@color/pressed</item>
        <item name="colorAccent">@color/pressed</item>

        <item name="android:activityOpenEnterAnimation">@android:anim/slide_in_left</item>
        <item name="android:activityOpenExitAnimation">@android:anim/slide_out_right</item>
        <item name="android:activityCloseEnterAnimation">@anim/push_right_in</item>
        <item name="android:activityCloseExitAnimation">@anim/push_left_out</item>
    </style>



    <style name="JumyTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/pressed</item>
        <item name="colorPrimaryDark">@color/pressed</item>
        <item name="colorAccent">@color/pressed</item>
        <item name="android:windowAnimationStyle">@style/ActivityAnimation</item>
        <item name="android:actionMenuTextColor">@color/white</item>
        <item name="actionMenuTextColor">@color/white</item>
    </style>

    <style name="Material_Headline_notify">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#444</item>
    </style>

    <style name="Material_Card_Title_notify" parent="Material_Headline_notify">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:gravity">center_vertical|left</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">24dp</item>
    </style>

    <style name="Material_Body1">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Material_Card_Supporting_Text_24dp_2" parent="Material_Body1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:gravity">center_vertical|left</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingBottom">16dp</item>
    </style>

    <style name="Material_Card_View">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">6dp</item>
    </style>

    <style name="MainLayout">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Material_Card_Title" parent="Material_Headline">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:gravity">center_vertical|left</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <style name="Material_Headline">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#444</item>
    </style>

    <style name="Material_Card_Subtitle_16dp" parent="Material_Card_Subtitle_24dp">
        <item name="android:paddingBottom">16dp</item>
    </style>

    <style name="Material_Card_Subtitle_24dp" parent="Material_Subhead">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:gravity">center_vertical|left</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingBottom">24dp</item>
    </style>

    <style name="Material_Subhead">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#777</item>
    </style>


    <style name="ActivityAnimation" parent="@android:style/Animation.Activity">
        <!--open Animation-->
        <item name="android:activityOpenEnterAnimation">@anim/slide_left_in</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_left_out</item>
        <!--close Animation-->
        <item name="android:activityCloseEnterAnimation">@anim/slide_right_in</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_right_out</item>
    </style>

    <style name="Animation.CustomPopup" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>

    <style name="loadingDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:backgroundDimEnabled">false</item>
        <!-- 模糊 -->
        <item name="android:windowIsTranslucent">false</item>
        <!-- 半透明 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 无标题 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 背景透明 -->
    </style>
    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="actionMenuTextColor">@android:color/white</item>
        <item name="selectableItemBackground">@drawable/toolbar_button_bg</item>
    </style>
</resources>
